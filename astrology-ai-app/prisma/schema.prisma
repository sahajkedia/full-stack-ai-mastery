generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts Account[]
  sessions Session[]
  birthCharts BirthChart[]
  readings    Reading[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model BirthChart {
  id          String   @id @default(cuid())
  userId      String
  name        String   // User-given name for this chart
  birthDate   DateTime
  birthTime   String   // Time as string (HH:MM)
  birthPlace  String   // City, Country
  latitude    Float
  longitude   Float
  timezone    String   // Timezone offset
  chartData   Json     // Calculated chart data
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  readings Reading[]

  @@index([userId])
}

model Reading {
  id          String   @id @default(cuid())
  userId      String
  birthChartId String?
  type        ReadingType
  title       String
  content     String   @db.Text
  aiGenerated Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  birthChart BirthChart? @relation(fields: [birthChartId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([birthChartId])
}

enum ReadingType {
  NATAL_CHART
  COMPATIBILITY
  TRANSIT
  HOROSCOPE
  PERSONAL_INSIGHT
}
